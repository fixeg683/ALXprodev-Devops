#!/bin/bash

URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT="data.json"
ERROR_FILE="errors.txt"

# Make API request
response=$(curl -s -w "%{http_code}" "$URL" -o "$OUTPUT")

# Check HTTP status
if [ "$response" -ne 200 ]; then
    echo "[$(date)] Error: Request failed with status $response" >> "$ERROR_FILE"
    exit 1
fi

echo "Saved response to $OUTPUT"
