#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data"
mkdir -p "$DIR"

for pokemon in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $pokemon..."

    attempt=1
    success=0

    while [ $attempt -le 3 ]; do
        curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$DIR/$pokemon.json"

        if jq empty "$DIR/$pokemon.json" 2>/dev/null; then
            success=1
            break
        fi

        echo "Attempt $attempt failed... retrying"
        attempt=$((attempt+1))
        sleep 2
    done

    if [ $success -eq 1 ]; then
        echo "Saved data to $DIR/$pokemon.json ✅"
    else
        echo "Failed to fetch $pokemon after 3 attempts ❌" >> errors.txt
        echo "Failed to fetch $pokemon ❌"
    fi

    sleep 1
done
